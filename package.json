{
  "name": "il-fair-tax",
  "version": "0.1.0",
  "description": "",
  "private": true,
  "scripts": {
    "format": "prettier --write **/*.{js,css} !dist",
    "start": "NODE_ENV=development run-p -l start:*",
    "start:eleventy": "eleventy --serve",
    "start:rollup": "rollup --config rollup.config.js -w",
    "start:postcss": "postcss ./src/css -d ./site/_includes -w",
    "build": "NODE_ENV=production run-s -l build:*",
    "build:clean": "rm -rf dist",
    "build:rollup": "rollup --config rollup.config.js",
    "build:postcss": "postcss ./src/css -d ./site/_includes",
    "build:webpack": "webpack --config webpack.config.js --color",
    "build:eleventy": "eleventy",
    "lint": "eslint ./src/js/**/*.js",
    "style": "prettier --check src/**/**.{js,css}",
    "test": "mocha -r esm test",
    "analyze": "source-map-explorer dist/**/*.js dist/**/*.js.map"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@quasibit/eleventy-plugin-sitemap": "^2.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "autoprefixer": "^9.8.6",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "chai": "^4.2.0",
    "core-js": "^3.6.5",
    "cssnano": "^4.1.10",
    "eslint": "^7.7.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-mocha": "^8.0.0",
    "esm": "^3.2.25",
    "file-loader": "^6.0.0",
    "html-minifier": "^4.0.0",
    "html-webpack-plugin": "^4.3.0",
    "markdown-it": "^11.0.0",
    "markdown-it-link-attributes": "^3.0.0",
    "mocha": "^8.1.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.32",
    "postcss-cli": "^7.1.1",
    "postcss-import": "^12.0.1",
    "prettier": "^2.0.5",
    "prettier-eslint": "^11.0.0",
    "puppeteer": "^5.2.1",
    "rollup": "^2.26.3",
    "rollup-plugin-terser": "^7.0.0",
    "source-map-explorer": "^2.4.2",
    "terser-webpack-plugin": "^4.1.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "css-vars-ponyfill": "^2.3.2",
    "formdata-polyfill": "^3.0.20"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:mocha/recommended"
    ],
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true,
      "mocha": true
    },
    "plugins": [
      "import",
      "mocha"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    }
  },
  "prettier": {
    "endOfLine": "lf",
    "semi": false,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "mocha": {
    "exclude": "test/generate-test-data.js"
  }
}
