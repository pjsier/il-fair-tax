<meta charset="utf-8">
<meta http-equiv="x-ua-compatible" content="ie=edge" />
<meta name="viewport" content="width=device-width, initial-scale=1">

<title>{{ title or page.title or redirect.title or site.title }}{% if page.url != "/" and page.url != site.langRoot %} | {{ siteTitle or site.title }}{% endif %}</title>
<meta name="description" content="{{ description or redirect.description or page.description or site.description }}">

<link rel="sitemap" type="application/xml" href="/sitemap.xml" />

<link rel="icon" type="image/x-icon" href="{{ site.url }}/img/favicon.ico" />
<link rel="icon" type="image/png" sizes="32x32" href="{{ site.url }}{% resizeImage './src/img/icon.png', '32x32' %}" />
<link rel="icon" type="image/png" sizes="16x16" href="{{ site.url }}{% resizeImage './src/img/icon.png', '16x16' %}" />
<link rel="apple-touch-icon" sizes="180x180" href="{{ site.url }}{% resizeImage './src/img/icon.png', '180x180' %}" />
<link rel="manifest" href="{{ site.url }}/manifest.json" />
<meta name="theme-color" content="#ffffff" />

<meta property="og:title" content="{{ title or redirect.title or page.title or site.title }}" />
<meta property="og:site_name" content="{{ site.name }}" />
<meta property="og:description" content="{{ description or redirect.description or page.description or site.description }}" />
<meta property="og:type" content="{{ site.type }}" />
<meta property="og:url" content="{{ site.url }}{{ redirect.url or page.url }}" />
<meta property="og:image" content="{{ site.url }}/img/social.png" />
<meta property="og:image:alt" content="{{ title or redirect.title or page.title or site.title }}" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />

<meta name="twitter:card" content="summary" />
<meta name="twitter:title" content="{{ title or redirect.title or page.title or site.title }}{% if page.url != "/" and page.url != site.langRoot %} | {{ siteTitle or site.title }}{% endif %}" />
<meta name="twitter:description" content="{{ description or redirect.description or page.description or site.description }}" />
<meta name="twitter:image:src" content="{{ site.url }}/img/social.png" />
<meta name="twitter:image:alt" content="{{ title or redirect.title or page.title or site.title }}" />
