<div id="calculator-results" class="hidden block">
  <h2 id="change-description" class="text-center margin-bottom-4" aria-live="polite"></h2>
  <div class="flex-row-center">
    <div class="flex-column flex-grow-1 align-center justify-center">
      <p class="bold" id="currentTaxAmount"></p>
      <p>{{ t.currentTaxes }}</p>
    </div>
    <div class="flex-column flex-grow-1 align-center justify-center">
      <p class="bold" id="fairTaxAmount"></p>
      <p>{{ t.fairTax }}</p>
    </div>
  </div>
  <h3 class="block margin-top-6 margin-bottom-1-5">{{ t.yourTaxes }}</h3>
  <div class="hidden">
    <span id="tax-change-up">{{ t.taxChangeUp | safe }}</span>
    <span id="tax-change-down">{{ t.taxChangeDown | safe }}</span>
    <span id="tax-change-same">{{ t.taxChangeSame }}</span>
  </div>
  <div class="relative margin-bottom-4 flex-column">
    <div class="flex-row-center min-height-6 margin-bottom-1">
      <div class="chart-label width-16 text-right padding-right-1 line-height-1 font-size-reduced">{{ t.currentTax }}</div>
      <div id="current-tax-bar" class="flex-grow-1" data-percent="0">
        <div class="current-tax-width income-chart-bar height-6"></div>
      </div>
    </div>
    <div class="flex-row-center min-height-6 margin-bottom-1">
      <div class="chart-label width-16 text-right padding-right-1 line-height-1 font-size-reduced">{{ t.fairTax }}</div>
      <div id="fair-tax-bar" class="flex-grow-1" data-percent="0">
        <div class="fair-tax-width income-chart-bar height-6"></div>
      </div>
    </div>
    <div class="flex-row-center min-height-6">
      <div class="chart-label width-16 text-right padding-right-1 line-height-1 font-size-reduced">{{ t.income }}</div>
      <div class="flex-grow-1">
        <div class="income-width income-chart-bar height-6"></div>
      </div>
    </div>
  </div>
  <div class="content italic font-size-small">
    {{ t.calculatorDisclaimer | markdown | safe }}
  </div>
</div>
